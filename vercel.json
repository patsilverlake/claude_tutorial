{
  "version": 2,
  "buildCommand": "npm run vercel-build",
  "regions": ["iad1"],
  "rewrites": [
    { "source": "/", "destination": "/main" },
    { "source": "/(main)/:path*", "destination": "/main/:path*" },
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
} 